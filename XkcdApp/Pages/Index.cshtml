@page "/"
@using ExampleDataApis.ServiceModel
@attribute [RenderStatic]
@{
    ViewData["Title"] = "Home page";
}

<div class="bg-gray-100 py-8 dark:bg-gray-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div id="xkcd-comics"></div>
    </div> 
</div>
<script>comics = @await ApiResultsAsJsonAsync(new QueryXkcdComics
                        {
                            Ids = Enumerable.Range(1, 10).Select(_ => Random.Shared.Next(1,2630)).ToArray()
                        })
</script>
<script type="module">
import Comics from "/Pages/Comics.mjs"
import { mount } from "/mjs/app.mjs"
mount("#xkcd-comics", Comics, { comics })
</script>